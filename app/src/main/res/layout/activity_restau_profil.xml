<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestauProfil"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="75dp"
        android:layout_marginHorizontal="20dp"
        >

        <ImageButton
            android:id="@+id/imageRestaurant"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/r1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                 <TextView
                    android:id="@+id/nameRestaurant"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="RestauName"
                     android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/ratingRestaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="18dp"
                    android:text="★★★☆☆"/>


            </LinearLayout>





            <TextView
                android:id="@+id/localisationRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Localisation BLA BLA BLA"/>


        </LinearLayout>



    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu  : "
        android:textSize="25dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlats"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scrollbars="vertical"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="10dp"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        app:menu="@menu/bottom_va" />

</LinearLayout>