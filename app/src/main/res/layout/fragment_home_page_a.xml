<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewP"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="7dp" />

    <TextView
        android:id="@+id/catext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerViewP"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="left"
        android:text="category:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="" />



    <Button
        android:id="@+id/Japanese"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/catext"
        android:layout_marginStart="20dp"
        android:text="Japanese" />

    <Button
        android:id="@+id/maghreban"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/catext"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_toRightOf="@id/Japanese"
        android:text="Maghrebine" />

    <Button
        android:id="@+id/mexican"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/Japanese"
        android:layout_marginStart="20dp"
        android:text="mexican" />

    <Button
        android:id="@+id/fast"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/maghreban"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_toRightOf="@id/mexican"
        android:text="fast-food" />



</RelativeLayout>